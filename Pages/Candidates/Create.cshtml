@page
@model RecruitCatWelshsr.Pages.Candidates.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Candidate</h1>

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Candidate.FirstName" class="control-label"></label>
                <input asp-for="Candidate.FirstName" class="form-control" />
                <span asp-validation-for="Candidate.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.LastName" class="control-label"></label>
                <input asp-for="Candidate.LastName" class="form-control" />
                <span asp-validation-for="Candidate.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.TargetSalary" class="control-label"></label>
                <input asp-for="Candidate.TargetSalary" class="form-control" />
                <span asp-validation-for="Candidate.TargetSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.SocialSecurityNum" class="control-label"></label>
                <input asp-for="Candidate.SocialSecurityNum" class="form-control" />
                <span asp-validation-for="Candidate.SocialSecurityNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.DegreeTypeHeld" class="control-label"></label>
                <input asp-for="Candidate.DegreeTypeHeld" class="form-control" />
                <span asp-validation-for="Candidate.DegreeTypeHeld" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.DateAvailable" class="control-label"></label>
                <input asp-for="Candidate.DateAvailable" class="form-control" />
                <span asp-validation-for="Candidate.DateAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CompanyID" class="control-label"></label>
                <select asp-for="Candidate.CompanyID" class="form-control" asp-items="ViewBag.CompanyID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.JobTitleID" class="control-label"></label>
                <select asp-for="Candidate.JobTitleID" class="form-control" asp-items="ViewBag.JobTitleID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.IndustryID" class="control-label"></label>
                <select asp-for="Candidate.IndustryID" class="form-control" asp-items="ViewBag.IndustryID"></select>
            </div> 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
