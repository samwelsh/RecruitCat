@page
@model RecruitCatWelshsr.Pages.Industries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Industry</h1>

<div class="alert alert-warning">
    <h4><strong>@Html.DisplayFor(model => model.Industry.Name)</strong></h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Industry.IndustryId" />
            <div class="form-group">
                <label asp-for="Industry.Name" class="control-label"></label>
                <input asp-for="Industry.Name" class="form-control" />
                <span asp-validation-for="Industry.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Industry.IndustryId" class="control-label"></label>
                <input asp-for="Industry.IndustryId" class="form-control" />
                <span asp-validation-for="Industry.IndustryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
